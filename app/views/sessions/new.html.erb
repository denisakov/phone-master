<div style="margin-top:70px">
    <section>
     <%= form_for(:site_user, url: login_path) do |f| %>
     <!--form_for @site_user, url: sessions_path do |f|-->
        <div>
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>

        <div>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <br />
        <div>
          <%= f.submit 'Log in' %>
        </div>
      <% end %>
    </section>
</div>