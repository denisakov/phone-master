<p id="notice"><%= flash.now[:notice] %></p>
<% unless @lists.empty?%>
  <table class="list-table">
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @lists.each_with_index do |list, index| %>
        <%= form_tag create_list_contacts_path, multipart: true do %>
          <tr>
            <td><%= index+1 %>.</td>
            <td>
              
              <% if list.contacts.count == 0 && list.created_at < Time.now - 10800 %>
                <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure you want to delete item: ' + list.title + '?' } %>
              <% end %>
            </td>
            <td>
              "<%= list.title %>" &nbsp; (
                <% if @listRef.nil? || list.id != @listRef.id %>
                  <%= list.contacts.count %>
                <% else %>
                  <%= list.contacts.count %>
                <% end %>
              )&nbsp;
              <%= hidden_field_tag :listId, list.id %>
              <%= text_field_tag :sampleSize %>
            </td>
            <!--<td><%= link_to 'Show', list %></td>-->
            <!--<td><%= link_to 'Edit', edit_list_path(list) %></td>-->
            
            <!--<td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
            <td><%= submit_tag 'Create list'%></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>There are no records in the database yet</h3>
<% end %>